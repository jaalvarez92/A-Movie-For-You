<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jalvarez.amovieforyou">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AMovieForYouApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AMFYTheme">
        <activity
            android:name=".functionalities.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AMFYTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".functionalities.main.moviedetail.MovieDetailActivity"></activity>
    </application>

</manifest>